<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


<property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <changeSet author="tomelliott (generated)" id="1582543651845-5">
        <createTable tableName="tag">
            <column name="name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="VARCHAR(50)">
                <constraints nullable="true" />
            </column>
            <column name="annotation_id" type="uuid">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20180917100757-2" author="Tom Elliott">
        <addForeignKeyConstraint baseColumnNames="annotation_id"
                                 baseTableName="tag"
                                 constraintName="fk_tag_annotation_id"
                                 referencedColumnNames="id"
                                 referencedTableName="annotation"/>

        <addUniqueConstraint columnNames="name, created_by"
                             constraintName="composite_primary_key"
                             tableName="tag"/>
    </changeSet>
</databaseChangeLog>
